<%= simple_form_for(@classroom, html: {class: "form-signin"}) do |f| %>
  <%= f.error_notification %>
    <%= f.input :classroom_name, required: true, label: false, placeholder: "Name", input_html: {class: "form-control"} %>
    <%= f.input :classroom_total, label: false, placeholder: "Point total", input_html: {class: "form-control"} %>
    <%= f.button :submit %>
<% end %>
