<%= simple_form_for(@classroom, html: {class: "form-signin", multipart: true}) do |f| %>
  <%= f.error_notification %>
    <%= f.input :classroom_name, required: true, label: false, placeholder: "Name", input_html: {class: "form-control"} %>
    <%= f.input :classroom_total, label: false, placeholder: "Starting point total", input_html: {class: "form-control"} %>
    <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png' %>
    <%= f.button :submit %>
<% end %>

<script type="text/javascript">
  $('#classroom_picture').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert('Maximum file size is 5MB. Please choose a smaller file.');
    }
  });
</script>
